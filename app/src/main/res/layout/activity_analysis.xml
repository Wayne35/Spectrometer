<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/dark_gray">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@color/white"/>

    <Button
        android:id="@+id/btn_change"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/change"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/picture"/>

    <ImageButton
        android:id="@+id/take_photo"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/picture"
        android:layout_marginTop="10dp"
        android:background="@drawable/main_button"
        android:src="@drawable/camera_button"/>

    <ImageButton
        android:id="@+id/choose_photo"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_below="@+id/take_photo"
        android:layout_marginTop="10dp"
        android:background="@drawable/main_button"
        android:src="@drawable/album_button"/>


    <ImageButton
        android:id="@+id/process"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/picture"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/take_photo"
        android:background="@drawable/main_button"
        android:src="@drawable/button_start" />

    <ImageButton
        android:id="@+id/process_compare"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_below="@+id/picture"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/process"
        android:background="@drawable/main_button"
        android:src="@drawable/button_start" />

    <ImageView
        android:id="@+id/aiLab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/process"
        android:layout_marginTop="10dp"
        android:background="@drawable/ailab"/>


</RelativeLayout>